			type: TEXTBLOCK;
			mouse_events: 0;
			scale: 1;
			description {
				state: "default" 0.0;
				rel1.relative: 0.5 -0.5;
				rel2.relative: 15.5 0.5;
				map {
					on: 1;
					rotation.center: "center";
					rotation.z: 67.5;
				}
				text {
