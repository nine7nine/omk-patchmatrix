		program { signal: "col,20"; source: PATCHER_UI; action: STATE_SET "default" 0.20; target: "icon.clip"; }

		program {
			signal: "mouse,in";
			source: "ev";
			action: SIGNAL_EMIT "in" PATCHER_UI;
		}
		program {
			signal: "mouse,out";
			source: "ev";
			action: SIGNAL_EMIT "out" PATCHER_UI;
		}
		program {
			signal: "mouse,clicked,*";
			source: "ev";
			action: SIGNAL_EMIT "toggled" PATCHER_UI;
		}

		program {
			signal: "on";
			source: PATCHER_UI;
			action: STATE_SET "default" 1.0;
			target: "ev";
		}
		program {
			signal: "off";
			source: PATCHER_UI;
			action: STATE_SET "default" 0.0;
			target: "ev";
		}
	}
}

styles {
	style {
		name: "label_style";
		base: "font=mono font_size=10 align=left color=#ffffffff style=soft_shadow shadow_color=#00000080";
		tag: "b" "+ style=shadow";
	}
}

group {
	name: "/patchmatrix/patcher/label/horizontal";

	parts {
		part {
			name: "center";
			type: RECT;
			mouse_events: 0;
			description {
				state: "default" 0.0;
				rel1.relative: 0.0 0.5;
				rel2.relative: 0.0 0.5;
			}
		}
		part {
			name: "default";
			type: TEXTBLOCK;
			mouse_events: 0;
			scale: 1;
			description {
				state: "default" 0.0;
				rel1.relative: 0.0 -0.5;
				rel2.relative: 1.0 1.5;
				map {
					on: 1;
					rotation.center: "center";
					rotation.z: 22.5;
				}
				text {
					align: 0.0 0.5;
					style: "label_style";
				}
				color: 128 128 128 255;
			}
			description {
				state: "default" 1.0;
				inherit: "default" 0.0;
				color: 255 255 255 255;
			}
		}
	}

	programs {
		program {
			signal: "on";
			source: PATCHER_UI;
			action: STATE_SET "default" 1.0;
			target: "default";
		}
		program {
			signal: "off";
			source: PATCHER_UI;
			action: STATE_SET "default" 0.0;
			target: "default";
		}
	}
}

